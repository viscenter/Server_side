	<!-- OVERVIEW of the TextInventory:  -->
	<!-- A TextInventory organizes works in two orthogonal structures
    called textgroups and collections.

    Textgroups are hierarchical groupings allowing you to include under works
    information about editions, translations or specific physical exemplars
    of either editions or translations. 
    
    Collections allow you to group together a set of works on any basis you like.
    Membership of a work in a collection is indicated using  the memberof element:
    see the works element of the textgroup structure.
      
-->
	<!-- Dublin Core elements to provide for each Collection -->
	<define
		name="metadata">
		<element
			name="dc:title">
			<attribute
				name="xml:lang"/>
			<text/>
		</element>
		<oneOrMore>
			<element
				name="dc:creator">
				<text/>
			</element>
		</oneOrMore>
		<element
			name="dc:coverage">
			<attribute
				name="xml:lang"/>
			<text/>
		</element>
		<element
			name="dc:description">
			<attribute
				name="xml:lang"/>
			<text/>
		</element>
		<element
			name="dc:rights">
			<attribute
				name="xml:lang"/>
			<text/>
		</element>
	</define>
	<start>
		<element
			name="ti:TextInventory">
			<attribute
				name="tiversion">
				<choice>
					<value>3.0.rc1</value>
				</choice>
			</attribute>
			<optional>
				<attribute
					name="tiid"/>
			</optional>
			<optional>
				<element
					name="ti:options">
					<optional>
						<element
							name="ti:topology">
							<attribute
								name="supported">
								<choice>
									<value>yes</value>
									<value>no</value>
								</choice>
							</attribute>
						</element>
					</optional>
				</element>
			</optional>
			<zeroOrMore>
				<element
					name="ti:ctsnamespace">
					<attribute
						name="abbr"/>
					<attribute
						name="ns"/>
					<optional>
						<element
							name="ti:description">
							<attribute name="xml:lang"></attribute>
							<text/>
						</element>
					</optional>
				</element>
			</zeroOrMore>
			<!-- There must be one default Collection; 
				others may optionally be defined -->
			<element
				name="ti:collection">
				<attribute
					name="id">
					<!--<data type="ID"/> -->
				</attribute>
				<optional>
					<attribute
						name="isdefault">
						<value>yes</value>
					</attribute>
				</optional>
				<ref
					name="metadata"/>
			</element>
			<zeroOrMore>
				<element
					name="ti:collection">
					<attribute
						name="id"> </attribute>
					<optional>
						<attribute
							name="isdefault">
							<value>no</value>
						</attribute>
					</optional>
					<ref
						name="metadata"/>
				</element>
			</zeroOrMore>
			<optional>
				<element
					name="ti:citationSchemes">
					<oneOrMore>
						<element
							name="ti:scheme">
							<attribute
								name="projid"/>
							<attribute
								name="type">
								<choice>
									<value>logical</value>
									<value>physical</value>
								</choice>
							</attribute>
							<element
								name="ti:label">
								<text/>
							</element>
							<element
								name="ti:description">
								<attribute name="xml:lang"></attribute>
								<text/>
							</element>
						</element>
					</oneOrMore>
				</element>
			</optional>
			<oneOrMore>
				<externalRef
					href="textgroup.rng"/>
			</oneOrMore>
		</element>
	</start>
</grammar>
